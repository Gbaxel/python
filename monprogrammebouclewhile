
 
def entree(): 
 	print ("Calcul d'un programme qui affiche la table de multiplication de 7jusqu'Ã :\n") 
 	a = float(input("Indiquez la valeur de a :"))  
 	return a
 	 


 
def pourImpression(a): 
 	x=0 
 	while x<a+1: 
 		print ("\n"+str(x)+"x7"+"="+str(fonction(x,a))+"\n") 
 		x=x+1 


def fonction(x,a): 
 	y= 7*x 
 	return y 
 	
 	 


print("   ---> Debut du programme.\n")
coefA=entree() 
pourImpression(coefA) 
print ("\n   ---> Fin du programme.")
